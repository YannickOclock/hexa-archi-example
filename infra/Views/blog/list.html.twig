{% extends "base.html.twig" %}

{% block content %}
    <h1>Liste des posts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.status }}</td>
                <td>
                    <a href="">Voir</a>
                    <a href="">Editer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
{% endblock %}