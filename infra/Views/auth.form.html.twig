{% extends "base.html.twig" %}

{% block content %}
    <h1>Se connecter au site</h1>
    {% if errors['global'] %}
        {% for message in errors['global'] %}
            <div class="alert alert-danger my-1">{{ message }}</div>
        {% endfor %}
    {% endif %}

    <form action="" method="post">
        <div class="form-group {{ errors['email'] ? 'invalid':'' }}">
            <label for="email">Adresse email</label>
            <input type="text" class="form-control" id="email" name="email" >
            {% if errors['email'] %}
                {% for message in errors['email'] %}
                    <div class="alert alert-danger my-1">{{ message }}</div>
                {% endfor %}
            {% endif %}
        </div>
        <div class="form-group {{ errors['password'] ? 'invalid':'' }}">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="password">
            {% if errors['password'] %}
                {% for message in errors['password'] %}
                    <div class="alert alert-danger my-1">{{ message }}</div>
                {% endfor %}
            {% endif %}
        </div>
        <button class="btn btn-primary my-2">Se connecter</button>
    </form>
{% endblock %}